<?xml version="1.0" encoding="UTF-8" ?>
<pages:BasePage
    x:Class="XamarinMvvm.Sample.Page.SettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:XamarinMvvm.Sample.Page">
    <ContentPage.Content>
        <StackLayout Spacing="2">
            <StackLayout
                Padding="16"
                BackgroundColor="White"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal">
                <Label Text="Enable Finger Print" />
                <Switch HorizontalOptions="EndAndExpand" />
            </StackLayout>
            <StackLayout
                Padding="16"
                BackgroundColor="White"
                HorizontalOptions="FillAndExpand"
                Orientation="Horizontal">
                <Label Text="Languge" />
                <Label HorizontalOptions="EndAndExpand" Text="English" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</pages:BasePage>